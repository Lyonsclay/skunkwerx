<% stylesheet 'admin/malone_tunes/tuning_index' %>

<ul class="menu">
  <%= button_to "ADMIN PAGE", admin_path, method: :get %>
  <%= button_to "BACK", admin_malone_tunes_path, method: :get %>
</ul>

<h2> Select models to view tunings to add to Skunkwerx web sales </h2>

<table>
<% @models.each do |model| %>
	<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
		<td class="list_description">
			<dl>
				<!-- <dt>Make:&nbsp</dt> -->
				<dd><%= model[:make] %>
				<% unless model[:model].nil? %>
					<!-- <dt>Model:&nbsp</dt> -->
					<%= model[:model] %></dd>
				<% end %>
			</dl>
		</td>
		<td class="list_actions">
			<%= link_to 'View', admin_malone_tune_path(id: @models.index(model), model: model) %><br/>
			<%#= link_to 'Edit', edit_malone_tunes_path(model) %><br/>
			<%#= link_to 'Remove', delete_malone_tunes_path(model) %><br/>
		</td>
	</tr>
<% end %>
</table>
<br/>