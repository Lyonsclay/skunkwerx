<% stylesheet 'admin/malone_tunes/tuning_index' %>

<ul class="menu">
    <%= button_to "ADMIN PAGE", admin_path, method: :get %>
</ul>

<h2> Select models to view tunings to add to Skunkwerx web sales </h2>

<table>
    <% @models.each do |model| %>
	<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
	    <td class="list_description">
		<dl>
		    <!-- <dt>Make:&nbsp</dt> -->
		    <dd><%= model[:make] %>
			<% unless model[:model].nil? %>
			    <!-- <dt>Model:&nbsp</dt> -->
			    <%= model[:model] %></dd>
			<% end %>
		</dl>
	    </td>
	    <td class="list_actions">
		<%= button_to 'Select', { action: :create, model: model } %>
		<br/><br/>
	    </td>
	</tr>
    <% end %>
</table>
<br/>
