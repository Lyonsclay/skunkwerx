<div class="products">
	<div id="title">
		<p>Skunkwerx Products</p>
	</div>
	<ul>
		<li><%= link_to "HOME", "/admin" %></li>
	</ul>
	<div class="items">
	<table>
		<% cache(@products) do %>
			<% @products.each do |product| %>
				<% cache [product] do %>
					<tr class="<%= cycle('odd_line', 'even_line') %>">
						<td class="image">
							<%= image_tag(product.image.url(:medium), size: "150x150") %>
						</td>
						<td class="description">
							<dl>
								<dt>
									<%= product.name %>
								</dt>
								<dt class="unit_cost">
									<%= sprintf("$%0.02f", product.unit_cost) %>
								</dt>
								<dd>
									<p><%= product.description %></p>
								</dd>
							</dl>
						</td>
						<td class="list_actions">
							<%= link_to 'Edit', edit_admin_product_path(product) %>
						</td>
					</tr>
				<% end %>
			<% end %>
		<% end %>
	</table>
	</div>
</div>
