<div class="carts">
	<% if notice %>
	<p id="notice"><%= notice %></p>
	<% end %>
	<h2 id="title">Your Shopping Cart</h2>
	<div class="items">

		<table class="line-items">
			<thead>
				<tr class="cart-heading">
					<td>Remove</td>
					<td align="left">Product(s)</td>
					<td>Qty.</td>
					<td>Total</td>
				</tr>
			</thead>
			<tbody>
				<% @cart.line_items.each do |item| %>
				<tr class="cart-data">
					<td>
						<%= check_box_tag 'select' %>
					</td>
					<td>
					<table>
						<tr>
							<td>
								<%= image_tag(item.product.image.url, class: 'image_url', size: "75x75") %>
							</td>
							<td>
								<%= item.product.name %>
							</td>
						</tr>
					</table>
					</td>
					<td>1</td>
					<td>
						<%= "$" + item.product.unit_cost.to_s %>
					</td>
				</tr>
				<% end %>
			<tbody>
			<tfooter>
				<td></td>
				<td class="sub-total">Sub-total:</td>
				<td></td>
				<td>$320.57</td>
			</tfooter>
		</table>
	</div>

	<%= link_to 'Checkout', edit_cart_path(@cart) %>
	<%= link_to 'Continue Shopping', products_index_path %>
</div>