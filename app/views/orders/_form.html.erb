<%= form_for(@order) do |f| %>
    <% if @order.errors.any? %>
        <div id="error_report">
            <h2><%= pluralize(@order.errors.count, "error") %>
                prohibited this order from being saved:</h2>
            <ul>
                <% @order.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, size: 35 %>
    </div>
    <div class="field">
        <%= f.label :address %>
        <%= f.text_area :address, rows: 3, cols: 25 %>
    </div>
    <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, size: 35 %>
    </div>
    <div class="field">
        <%= f.label "Payment" %>
        <%= f.select :payment_type, Order::PAYMENT_TYPES, prompt: 'Select a payment method' %>
    </div>
    <div class="buttons">
        <%= f.submit 'Place Order' %>
    </div>
<% end %>
