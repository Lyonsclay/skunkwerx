<tr>
	<% if line_item == @current_item %>
	<div id="current-item">
	<% else %>
	<div>
	<% end %>
		<td>
			<div class="quantity">
				<%= line_item.quantity %>
			</div>
		</td>
		<td class="name">
			<%= line_item.product.name if line_item.product %>
			<%= line_item.malone_tune.name if line_item.malone_tune %>
		</td>
		<td class="unit_cost">
			<%= number_to_currency line_item.product.unit_cost if line_item.product %>
			<%= number_to_currency line_item.malone_tune.unit_cost if line_item.malone_tune %>
		</td>
	</div>
</tr>